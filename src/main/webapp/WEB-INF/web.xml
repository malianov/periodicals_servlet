<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

  <servlet>
    <servlet-name>Servlet</servlet-name>
    <servlet-class>hire.me.controller.Servlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>Servlet</servlet-name>
    <url-pattern>/app/*</url-pattern>
  </servlet-mapping>

  <listener>
    <listener-class>
      hire.me.controller.listener.SessionListener
    </listener-class>
  </listener>

  <listener>
    <listener-class>
      hire.me.controller.listener.ContextListener
    </listener-class>
  </listener>

  <filter>
    <filter-name>LocaleFilter</filter-name>
    <filter-class>hire.me.controller.filters.LocaleFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>LocaleFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>hire.me.controller.filters.EncodingFilter</filter-class>
    <init-param>
      <param-name>requestEncoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
    <init-param>
      <param-name>responseEncoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>AccessFilter</filter-name>
    <filter-class>hire.me.controller.filters.AccessFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>AccessFilter</filter-name>
    <url-pattern>/app/*</url-pattern>
  </filter-mapping>

<!--  <error-page>
    <error-code>403</error-code>
    <location>/WEB-INF/view/error_403.jsp</location>
  </error-page>

  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/view/error_404.jsp</location>
  </error-page>-->

  <error-page>
    <location>/WEB-INF/view/error_403.jsp</location>
  </error-page>

</web-app>